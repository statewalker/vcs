{
  "name": "@webrun-vcs/common",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@webrun-vcs/hash": "workspace:*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./compression-node": {
      "types": "./dist/compression-node/index.d.ts",
      "import": "./dist/esm/compression-node/index.js",
      "require": "./dist/cjs/compression-node/index.cjs"
    }
  },
  "scripts": {
    "build": "rm -rf dist && rolldown -c && tsc --emitDeclarationOnly --declaration",
    "test": "vitest run --passWithNoTests",
    "lint": "biome lint src tests"
  },
  "devDependencies": {
    "rolldown": "catalog:",
    "vitest": "catalog:",
    "typescript": "catalog:",
    "@types/node": "catalog:"
  }
}
