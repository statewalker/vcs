{
  "name": "@webrun-vcs/core",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "rm -rf dist && rolldown -c && tsc --emitDeclarationOnly --declaration",
    "test": "vitest run",
    "test:watch": "vitest run --watch",
    "lint": "biome lint src tests"
  },
  "dependencies": {
    "@webrun-vcs/compression": "workspace:*",
    "@webrun-vcs/diff": "workspace:*",
    "@webrun-vcs/storage": "workspace:*",
    "@webrun-vcs/storage-default": "workspace:*",
    "@webrun-vcs/storage-mem": "workspace:*"
  },
  "devDependencies": {
    "rolldown": "catalog:",
    "vitest": "catalog:",
    "typescript": "catalog:",
    "@types/node": "catalog:"
  }
}
